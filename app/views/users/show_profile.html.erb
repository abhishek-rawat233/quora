<h1><%= @user.name%> Profile</h1>
  <%= image_tag @user.image if @user.image.attached?%>

<% unless @user.id == @current_user.id %>
  <% unless Follow.exists?(base_user_id: @current_user.id, following_id: @user.id ) %>
    <%= link_to :follow, user_follow_path(@current_user.id, @user.id), method: :put %>
  <% else %>
    <%= link_to :unfollow, user_follow_path(@current_user.id, @user.id), method: :delete %>
  <% end %>
<% end %>
