<h2>Edit Profile</h2>
<%= form_with model: @current_user, url: user_profile_edit_path do |f| %>
  <div class="field">
    <%= f.label :profile_image, t('.upload_profile_image') %>
    <%= f.file_field :profile_image, accept: 'image/png,image/gif,image/jpeg' %>
  </div>

  <div class="select">
    <%= f.label 'topic_id' %>
    <%= f.select 'topic_id', @topics.map { |topic| [ topic.name, topic.id ] }, {prompt: true, include_hidden: false}, {multiple: true} %>
  </div>

  <%= submit_tag %>
<% end %>
<%= link_to t('.back'), user_profile_path %>
