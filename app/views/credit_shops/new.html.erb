<p>Payment form</p>
<article class="card">
<div class="card-body p-5">
<ul class="nav bg-light nav-pills rounded mb-3">
	<li class="nav-item">
		<a class="nav-link active" data-toggle="pill" href="#nav-tab-card">
		<i class="fa fa-credit-card"></i> Card Payment</a></li>
</ul>
<div class="tab-content">
<div class="tab-pane fade show active" id="nav-tab-card">
	<%= form_with url: credit_shops_path do |form| %>
	<div class="form-group">
		<%= form.label :name, 'Full Name on card' %>
		<%= form.text_field :name, class: 'form-control' %>
	</div>
	<div class="form-group">
		<%= form.label :cardNumber, 'Enter 16 digit cardnumber' %>
		<div class="input-group">
			<%= form.text_field :cardNumber, class: 'form-control' %>
			<div class="input-group-append">
				<span class="input-group-text text-muted">
					<i class="fab fa-cc-visa"></i>   <i class="fab fa-cc-amex"></i>
					<i class="fab fa-cc-mastercard"></i>
				</span>
			</div>
		</div>
	</div> <!-- form-group.// -->
	<div class="row">
	    <div class="col-sm-8">
	        <div class="form-group">
	            <label><span class="hidden-xs">Expiration Date</span> </label>
	        	<div class="input-group">
							<%= form.select :month, 1..12, class: 'form-control' %>
							<>
							<%= form.select :month, ..12, class: 'form-control' %>
							  <input type="number" class="form-control" placeholder="YY" name="">
	        	</div>
	        </div>
	    </div>
	    <div class="col-sm-4">
	        <div class="form-group">
	            <label data-toggle="tooltip" title="" data-original-title="3 digits code on back side of the card">CVV <i class="fa fa-question-circle"></i></label>
	            <input type="number" class="form-control" required="">
	        </div> <!-- form-group.// -->
	    </div>
	</div> <!-- row.// -->
	<button class="subscribe btn btn-primary btn-block" type="button"> Confirm  </button>
	<% end %>
</div> <!-- tab-pane.// -->
<div class="tab-pane fade" id="nav-tab-paypal">
<p>Paypal is easiest way to pay online</p>

<p>
<button type="button" class="btn btn-primary"> <i class="fab fa-paypal"></i> Log in my Paypal </button>
</p>
